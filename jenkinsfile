pipeline {
    agent any
    stages {
        stage('Clean') {
          steps {
            sh 'chmod +x gradlew'
            sh './gradlew clean'
          }
        }
        stage('Test') {
          steps {
            sh './gradlew smoke_tests --no-daemon --warning-mode=all'
          }
        }
        stage('Allure Report') {
          steps {
            allure([
            includeProperties: false,
            jdk: '',
            properties: [],
            reportBuildPolicy: 'ALWAYS',
            results: [[path: 'build/allure-results']]
            ])
          }
        }
    }
}