pipeline {
    agent any
	parameters {
	choice(
		name: 'TASKS',
		choices: ['smoke_tests', 'regression_tests', 'ui_tests', 'api_tests', 'test'],
		description: 'Выбор тестового прогона'
		)
	}
    stages {
        stage('Clean') {
          steps {
            sh 'chmod +x gradlew'
            sh './gradlew clean'
          }
        }
        stage('Test') {
          steps {
			script {
			try {
				sh './gradlew ${TASKS} --no-daemon --warning-mode=all'
			}
			catch (Exception e) {
				println("Error ${e}")
			}
          }
		  }
        }
        stage('Allure Report') {
          steps {
            allure([
            includeProperties: false,
            jdk: '',
            properties: [],
            reportBuildPolicy: 'ALWAYS',
            results: [[path: 'build/allure-results']]
            ])
          }
        }
		stage('Email') {
            steps {
                emailext([
                        mimeType          : "text/html",
                        subject           : 'На стенде ИФТ завершился прогон E2E-тестов',
                        recipientProviders: [requestor()],
                        body              : '''${SCRIPT, template="managed:AllureReportEmail"}''',
                        attachLog         : false,
                        to                : "innokentiy@ajgi.ru"
                ])
            }
        }
    }
}